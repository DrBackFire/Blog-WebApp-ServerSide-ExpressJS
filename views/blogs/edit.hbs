<h3>Add Blog</h3>
<div class="row">
    <form action="/blogs/{{blog._id}}" method="POST" class="col s12">

        {{!-- Using methodOverride to do a put or delete request --}}
        <input type="hidden" name="_method" value="PUT">

        <div class="row">
            <div class="input-field">
                <input autofocus type="text" id="title" name="title" value="{{blog.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                {{#select blog.status}}
                <select id="status" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                {{/select}}
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Speak your mind:</h5>
                <textarea id="body" name="body">{{blog.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>